<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

    <context-param>
        <param-name>configuration</param-name>
        <param-value>deployment</param-value>
    </context-param>

    <session-config>
        <session-timeout>360</session-timeout>
    </session-config>

    <filter>
        <filter-name>Zametki</filter-name>
        <filter-class>
            org.apache.wicket.protocol.http.WicketFilter
        </filter-class>
        <async-supported>true</async-supported>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>com.github.zametki.ZApplication</param-value>
        </init-param>
        <init-param>
            <param-name>ignorePaths</param-name>
            <param-value>/css,/js,/img,/html,/font</param-value>
        </init-param>
    </filter>

    <servlet>
        <display-name>Ktor Hello Sample</display-name>
        <servlet-name>KtorHelloSample</servlet-name>
        <servlet-class>org.jetbrains.ktor.servlet.ServletApplicationHost</servlet-class>
        <async-supported>true</async-supported>
        <multipart-config>
            <!-- 100mb max file upload -->
            <max-file-size>304857600</max-file-size>
            <max-request-size>304857600</max-request-size>
            <file-size-threshold>0</file-size-threshold>
        </multipart-config>
    </servlet>


    <servlet-mapping>
        <servlet-name>KtorHelloSample</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <filter-mapping>
        <filter-name>Zametki</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>


    <error-page>
        <error-code>404</error-code>
        <!--suppress WebProperties -->
        <location>/404</location>
    </error-page>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Entire application</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
    </security-constraint>

</web-app>
